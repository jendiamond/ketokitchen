<%= render 'shared/page_title', title: 'All Chefs' %>

<div align='center'>
  <%= will_paginate %>
  <% @chefs.each do |chef| %>
    <ul class='listing'>
      <div class='row'>
        <div class='well col-md-4 col-md-offset-4'>
          <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
          <li class='chef-title'><%=link_to chef.chefname.capitalize, chef_path(chef) %></li>
          <li><small><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></small></li>
          <div class='button-actions chef-buttons'>
            <li><%= link_to 'Edit', edit_chef_path(chef), class: 'btn btn-xs btn-warning' %>
                <%= link_to 'Delete', chef_path(chef), method: :delete,
                          data: { confirm: 'Are you sure? Your profile and all your associated recipes will be destroyed.'},
                          class: 'btn btn-xs btn-danger' %>
            </li>
          </div>
       </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
