<%= render 'shared/page_title', title: 'Recipes' %>

<% @recipes.each do |recipe| %>
  <div class= "row">
    <div class= "col-md-2">
      <section class= "chef-info center">
        <%= gravatar_for(recipe.chef, size: 120) %>
      </section>
    </div>
    <div class= "col-md-8 well">
      <p><small><%= time_ago_in_words(recipe.created_at) %></small></p>
      <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
      <p><span class='quiet'><small><%= truncate(recipe.description, length: 50) %></small></span></p>
    </div>
  </div>
<% end %>
